<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="656dp"
        android:layout_height="397dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/captura_de_tela__2_" />

    <EditText
        android:id="@+id/emailInput"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="228dp"
        android:layout_height="51dp"
        android:layout_marginLeft="5px"
        android:layout_marginTop="4dp"
        android:background="#0B0A0A"
        android:backgroundTint="#D9D9D9"
        android:ems="10"
        android:hyphenationFrequency="normal"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorLink="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="56dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="98dp"
        android:background="#00181414"
        android:backgroundTint="#000000"
        android:fontFamily="@font/poppins_semibold"
        android:text="Login"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="286dp"
        android:layout_height="33dp"
        android:layout_marginStart="138dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="98dp"
        android:background="#00181414"
        android:backgroundTint="#000000"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Faça login para continuar"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="41dp"
        android:layout_height="13dp"
        android:layout_marginTop="4dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/poppins_light"
        android:text="E-MAIL"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/btEntrar"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/senhaInput"
        app:srcCompat="@drawable/captura_de_tela__4_" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_light"
        android:text="SENHA"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailInput"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/senhaInput"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="228dp"
        android:layout_height="51dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="100dp"
        android:background="#FB000000"
        android:backgroundTint="#d9d9d9"
        android:ems="10"
        android:inputType="text|textPassword"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/btCadastreSeLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="173dp"
        android:text="CADASTRE-SE!"
        android:textColorLink="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRecuperarSenhaLogin" />

    <TextView
        android:id="@+id/btRecuperarSenhaLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="150dp"
        android:text="ESQUECEU SUA SENHA?"
        android:textColorLink="#000000"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEntrar" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="168dp"
        android:text="© 2025 - LeM"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btCadastreSeLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>